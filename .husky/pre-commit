#!/usr/bin/env sh

echo "π” [Pre-commit] μ»¤λ°‹ μ „ μλ™ κ²€μ¦ μ‹μ‘..."

# 1. TypeScript νƒ€μ… μ²΄ν¬
echo "π”§ [Pre-commit] TypeScript νƒ€μ… μ²΄ν¬ μ¤‘..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "β [Pre-commit] TypeScript νƒ€μ… μ¤λ¥κ°€ μμµλ‹λ‹¤. μμ • ν›„ λ‹¤μ‹ μ»¤λ°‹ν•μ„Έμ”."
  exit 1
